@model  LingvaApp.ViewModels.RegisterViewModel
@{
    Layout = null;
    string errors = ViewBag.ErrorMessage;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="../../css/Registration/registration_window.css" asp-append-version="true">
    <title> Lingva: Create Account</title>
</head>
<body>
    <div class="auth">
        <form method="post" asp-controller="Account" asp-action="Register" class="window">
            <div asp-validation-summary="ModelOnly"></div>
            <h1 class="main">РЕГИСТРАЦИЯ</h1>
            <p class="enter_link">Уже есть аккаунт?<a href="~/Account/Login">Авторизоваться</a></p>
            <div class="field">
                <label class="field__label" asp-for="Email"></label><br />
                <input class="field__data" asp-for="Email" />
            </div>
            <div class="field">
                <label class="field__label" asp-for="UserName"></label><br />
                <input class="field__data" asp-for="UserName" />
            </div>
            <div class="field">
                <label class="field__label" asp-for="Password"></label><br />
                <input class="field__data" asp-for="Password" />

            </div>
            <div class="field">
                <label class="field__label" asp-for="PasswordConfirm"></label><br />
                <input class="field__data" asp-for="PasswordConfirm" />
            </div>
            <div class="button__field">
                <input class="button__push button" type="submit" value="ДАЛЕЕ" />
            </div>
            <div class="errors">
                <div><span asp-validation-for="Email"></span></div>
                <div><span asp-validation-for="UserName"></span></div>
                <div><span asp-validation-for="Password"></span></div>
                <div><span asp-validation-for="PasswordConfirm"></span></div>
                @errors
            </div>
        </form>
    </div>
</body>
</html>